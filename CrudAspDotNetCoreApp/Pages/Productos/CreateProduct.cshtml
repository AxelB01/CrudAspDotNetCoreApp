@page
@model CrudAspDotNetCoreApp.Pages.Productos.CreateProductModel
@{
}

<h1>Editar producto</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert-danger alert-danger">
        @Model.ErrorMessage
    </div>
}

<form method="post">
    <div class="form-group">
        <div>
            <label asp-for="Producto.Nombre">Nombre</label>
            <input type="text" class="form-control" asp-for="Producto.Nombre" />
        </div>
        <div>
            <label asp-for="Producto.Categoria">Categoría</label>
            <input type="text" class="form-control" asp-for="Producto.Categoria" />
        </div>
        <div>
            <label asp-for="Producto.PrecioCompra">Precio de compra</label>
            <input type="number" min="0.00" max="10000.00" step="0.01" asp-for="Producto.PrecioCompra" class="form-control" />
        </div>
        <div>
            <label asp-for="Producto.PrecioVenta">Precio de venta</label>
            <input type="number" min="0.00" max="10000.00" step="0.01" asp-for="Producto.PrecioVenta" class="form-control" />
        </div>
        <div>
            <label asp-for="Producto.Comentario">Comentario</label>
            <textarea class="form-control" rows="3" placeholder="Agregar comentario..." asp-for="Producto.Comentario"></textarea>
        </div>
    </div>
    <p>
        <button type="submit" class="btn btn-primary">
            Guardar
        </button>
    </p>
</form>
